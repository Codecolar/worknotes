mysql apache php: set up a lamp stack 
apt-get install apache2 php5 mysql-server php5-common
systemctl start apache2
chown -R user:user /var/www
vim /etc/apache2/envvars
edit export APACHE_RUN_USER=user_name
     export APACHE_RUN_GROUP=user_group
systemctl restart apache2











































































